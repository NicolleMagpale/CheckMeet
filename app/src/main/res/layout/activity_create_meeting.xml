<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_meeting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.checkmeet.view.CreateMeetingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meeting Name"
                android:id="@+id/tv_meeting_name"
                android:textSize="20sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_meeting_name"
                android:textSize="15sp"
                android:layout_below="@id/tv_meeting_name"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meeting Description"
                android:id="@+id/tv_meeting_description"
                android:textSize="20sp"
                android:layout_below="@id/et_meeting_name"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_meeting_description"
                android:textSize="15sp"
                android:layout_below="@id/tv_meeting_description"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick a color"
                android:id="@+id/tv_pick_color"
                android:layout_below="@id/et_meeting_description"
                android:textSize="20sp"
                />

            <com.thebluealliance.spectrum.SpectrumPalette
                android:id="@+id/palette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spectrum_autoPadding="true"
                app:spectrum_colors="@array/demo_colors"
                android:layout_below="@id/tv_pick_color"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick a date and time"
                android:id="@+id/tv_pick_date_time"
                android:layout_below="@id/palette"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_pick_date_time"
                android:id="@+id/ll_date"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginLeft="60dp"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/btn_open_calendar"
                    android:src="@drawable/ic_event_black_24dp"
                    android:tint="@color/material_gray_700"
                    android:background="#00000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ll_date"
                android:id="@+id/ll_from_date"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_time_from"
                    android:textSize="20sp"
                    android:text="From: "
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_timefrom"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/btn_open_from_time"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:tint="@color/material_gray_700"
                    android:background="#00000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ll_from_date"
                android:id="@+id/ll_to_date"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_time_to"
                    android:text="To: "
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_timeto"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/btn_open_to_time"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:tint="@color/material_gray_700"
                    android:background="#00000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ll_to_date"
                android:id="@+id/ll_pick_location"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick a location"
                    android:id="@+id/tv_pick_location"
                    android:layout_below="@id/ll_to_date"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/btn_pick_location"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/material_gray_700"
                    android:background="#00000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ll_pick_location"
                android:id="@+id/ll_add_guests"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add guests"
                    android:id="@+id/tv_add_guests"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/btn_add_guests"
                    android:src="@drawable/ic_group_black_24dp"
                    android:tint="@color/material_gray_700"
                    android:background="#00000000"
                    />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
